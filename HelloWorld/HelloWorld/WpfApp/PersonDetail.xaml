<Window x:Class="WpfApp.PersonDetail"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="Detail Osoby" Height="Auto" Width="500">
    <StackPanel>
        <Label FontSize="24">Jméno:</Label>
        <TextBox x:Name="txtFirstName" FontSize="24" Margin="30,0,0,0"></TextBox>
        <Label FontSize="24" Margin="0,10,0,0">Příjmení:</Label>
        <TextBox x:Name="txtLastName" FontSize="24" Margin="30,0,0,0"></TextBox>
        <Label FontSize="24" Margin="0,10,0,0">Datum narození:</Label>
        <TextBox x:Name="txtDateOfBirth" FontSize="24" Margin="30,0,0,0"></TextBox>
        <Button x:Name="btnUloz" Content="Ulož" FontSize="24" Width="150" Margin="0,20,0,20" Click="btnUloz_Click"/>
    </StackPanel>
</Window>
